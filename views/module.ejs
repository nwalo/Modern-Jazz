<!doctype html>
<html class="no-js" lang="en">

    <!--====== Head Start ======-->

    <%- include('partials/header') %>

    <!--====== Head Ends ======-->

  <body>

    <!--====== Navigation Start ======-->

    <%- include('partials/navigation') %>

    <!--====== Navigation Ends ======-->

    <!--====== Learning Start ======-->

    <section class="courses-details mysec">
        <div class="container">
            <div class="row flex-row-reverse">
                <div class="col-lg-8">
                    <div class="courses-details-content mt-50">
                        
                        <video src="/assets/smoke.mp4" width="100%" poster="/assets/images/courses/solo-lg.jpg" controls ></video>

                        <h2 class="title my"> <%= currentCourse.title %> <br> Lesson <%= lessonNumber %> : <%= currentCourseModule.name%> </h2>

                    </div>

                    <form action="/modules/:courseLink" id="myform" method="post">
                    <div class="sidebar-btn " style="margin: 80px auto 0; width: 110px; " >
                                             
                        <% if (lessonNumber) { %>
                        <input type="text " value="<%= currentCourse.link %>" name="courseLink" hidden>
                        <input type="text " id="number" value="<%= lessonNumber %>" name="lessonValue" hidden>
                        <% } %>
                        <button class="main-btn">Finish Lesson</button>
                    </div>
                    </form>

                    <p class="form-message success myles" id="nextLesson" style="margin-left: 0; margin-right: 0">
                        <span class="erImg"></span>
                        <span> </span>
                        <span class="erText">No more lesson for the week, next lesson would be available on Monday</span>
                    </p>

                <div class="courses-details-tab">
                 <div class="benefit-content">
                        <ul class="courses-details-list">
                            <li>
                                <i class="far fa-check-circle"></i>
                                <p>Join our telegram channel <a href="https://t.me/+8KIwRtycjitkNTM0" style="color: #ca9400;">here</a> to engage in the live virtual class session.</p>
                            </li>
                            <li>
                                <i class="far fa-check-circle"></i>
                                <p> Only two (2) courses would be available weekly.</p>
                            </li>
                            <li>
                                <i class="far fa-check-circle"></i>
                                <p> The live class session on telegram takes place on Mondays and Thursdays.</p>
                            </li>
                        </ul>

                  </div>
                 </div>
                    
                </div>
                <div class="col-lg-4"> 
                    <div class="courses-sidebar pt-20">
                        <div class="courses-features mt-30">
                            <div class="sidebar-title">
                                <h4 class="title">Course Modules</h4>
                            </div>
                            <ul>
                                <%  module.forEach(function(i){ %>
                                   <li> <a href="<%= i.lesson%>"><i class="fal fa-book"></i> <%= i.name %></a> <strong> <i class="fas fa-<%= i.status %>" ></i></strong></li> 
                                <%})%>
                                <li><a href="#nxt" data-toggle="modal" data-target="#exampleModalCenter" class="mylesson"><i class="fal fa-book"></i> The Art of Soloing 1</a> <strong> <i class="fa fa-lock"></i></strong></li>
                                <li><a href="#nxt" data-toggle="modal" data-target="#exampleModalCenter" class="mylesson"><i class="fal fa-book"></i> The Art of Soloing 2</a> <strong> <i class="fa fa-lock"></i></strong></li>
                                <li><a href="#nxt" data-toggle="modal" data-target="#exampleModalCenter" class="mylesson"><i class="fal fa-book"></i> The Art of Soloing 3</a> <strong> <i class="fa fa-lock"></i></strong></li>
                                <li><a href="#nxt" data-toggle="modal" data-target="#exampleModalCenter" class="mylesson"><i class="fal fa-book"></i> The Art of Soloing 4</a> <strong> <i class="fa fa-lock"></i></strong></li>
                                <li><a href="#nxt" data-toggle="modal" data-target="#exampleModalCenter" class="mylesson"><i class="fal fa-book"></i> Modern Music Band Setup</a> <strong> <i class="fa fa-lock"></i></strong></li>
                                <li><a href="#nxt" data-toggle="modal" data-target="#exampleModalCenter" class="mylesson"><i class="fal fa-book"></i> 22 Modern Music Skills Monetization</a> <strong> <i class="fa fa-lock"></i></strong></li>
                                <li><a href="#nxt" data-toggle="modal" data-target="#exampleModalCenter" class="mylesson"><i class="fal fa-book"></i> The Legalities of 20th Century Music</a> <strong> <i class="fa fa-lock"></i></strong></li>
                            </ul>
                                
                                <% var checkStatus = module.find(function(i){ %>
                                 <% return i.status == 'lock' %>
                                <%})%>
                                    
                                <% if (checkStatus){ %>
                                <div class="sidebar-btn">
                                    <a class="main-btn mybtn" href="#!">Print Certificate</a>
                                </div>
                                <%} else {%>
                                <div class="sidebar-btn">
                                    <a class="main-btn mybtn" href="#!">Print Certificate</a>
                                </div>
                                <% } %>
                            <div>
                            <p class="form-message success mysuc" id="error" style="margin-left: 0; margin-right: 0">
                                <span class="erImg"></span>
                                <span> </span>
                                <span class="erText">Kindly complete all modules</span>
                            </p>
                        </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--====== Learning Ends ======-->

    
    <!--====== Modal Starts ======-->
    
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Course Alert</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        No more lesson for the week, next lesson would be available on Monday
      </div>
      <div class="modal-footer">
        <button type="button" class="main-btn mybtn" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
    <!--====== Modal Ends ======-->
    
    <!--====== Footer Starts ======-->
    
    <%- include('partials/footer') %>

    <!--====== Footer Ends ======-->

    <script>
        $(function () {
            $('.mysuc').hide()
            $('.mybtn').on('click', function () {
                $('.mysuc').fadeIn(1000)
            })

            var checkNum = $('#number').val();
            $('.myles').hide()

            if (checkNum == '1.2') {
                $('#myform').on('submit', function (e) {
                    e.preventDefault();
                    $('.myles').fadeIn(1000)
                })

                $('.courses-features ul li a').click(function (e) {
                    
                    if (this.href.slice(55,) > '1.2') {
                        $('.myles').fadeIn(1000);
                        e.preventDefault();
                    }
                })
            }
            
        })
    </script>
    
</body>

</html>

<!doctype html>
<html class="no-js" lang="en">

    <!--====== Head Start ======-->

  <%- include('partials/blog/header') %>

  <!--====== Head Ends ======-->

  <body>
    <!--====== Navigation Start ======-->

    <%- include('partials/navigation') %>

    <!--====== Navigation Ends ======-->
    
    <!--====== Page Banner Start ======-->

    <section class="page-banner">
        <div class="page-banner-bg bg_cover" 
        style="background-image: url(/assets/images/blog/blogg.jpg);
        background-color: #24242475;
        background-blend-mode: overlay;">
            <div class="container">
                <div class="banner-content text-center">
                    <h2 class="title">Blog</h2>
                </div>
            </div>
        </div>
    </section>

    <!--====== Page Banner Ends ======-->

    <!--====== Blog Start ======-->

    <section class="blog-page">
        <div class="container">
            <div class="row">
                <% posts.forEach( (post) => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="single-blog mt-30">
                        <div class="blog-image">
                            <a href="/blog/post/<%= post.id %>">
                                <img src="data:image/<%= post.image.contentType%>;base64,<%= post.image.data.toString('base64')%>" alt="blog" width="370" height="250">
                            </a>
                        </div>
                        <div class="blog-content">
                            <ul class="meta">
                                <li><a href="#"><%= post.timestamp %></a></li>
                                <li><a href="#">By: <%= post.author %></a></li>
                                <!-- <li><a href="#">12 Comments</a></li> -->
                            </ul>
                            <h4 class="blog-title"><a href="/blog/post/<%= post.id %>"><%= post.title %></a></h4>
                            <a href="/blog/post/<%= post.id %>" class="more">Read more <i class="fal fa-chevron-right"></i></a>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
            <ul class="pagination-items text-center">
                <li><a class="active" href="#">01</a></li>
                <li><a href="#">02</a></li>
                <li><a href="#">03</a></li>
                <li><a href="#">04</a></li>
                <li><a href="#">05</a></li>
            </ul>
        </div>
    </section>

    <!--====== Blog Ends ======-->
     
    <!--====== Footer Starts ======-->
    
    <%- include('partials/footer') %>

    <!--====== Footer Ends ======-->
    
</body>

</html>

<!doctype html>
<html class="no-js" lang="en">

<head>
    
    <!--====== Head Start ======-->

  <%- include('partials/header') %>

  <!--====== Head Ends ======-->

  <body>
    <!--====== Navigation Start ======-->

    <%- include('partials/navigation') %>

    <!--====== Navigation Ends ======-->
    
    <!--====== Page Banner Start ======-->

    <section class="page-banner">
        <div class="page-banner-bg bg_cover" 
        style="background-image: url(assets/images/bg/reg.jpg);
        background-color: #24242475;
        background-blend-mode: overlay;
        ">
            <div class="container">
                <div class="banner-content text-center">
                    <h2 class="title">Register</h2>
                </div>
            </div>
        </div>
    </section>

    <!--====== Page Banner Ends ======-->

    <!--====== Login Start ======-->

    <section class="login-register">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="login-register-content">
                        <div>
                            <p class="form-message success">
                                <span class="erImg"></span>
                                <span> </span>
                                <span class="erText"><%= errorMsg %></span>
                            </p>
                        </div>
                        <h4 class="title">Create New Account</h4>

                        <div class="login-register-form">
                            <form autocomplete="off" action="/register" method="post">
                                <div class="single-form">
                                    <label>First Name *</label>
                                    <input required type="text" name="fname" placeholder="Enter First Name">
                                </div>
                                <div class="single-form">
                                    <label>Last Name *</label>
                                    <input required type="text" name="lname" placeholder="Enter Last Name">
                                </div>
                                <div class="single-form">
                                    <label>Email address *</label>
                                    <input required type="email" name="username" placeholder="Enter Email Adress">
                                </div>
                                <div class="single-form">
                                    <label>Username *</label>
                                    <input required placeholder="Enter Username" name="nick" type="text">
                                </div>
                                <div class="single-form">
                                    <label>Password</label>
                                    <input required name="password"  placeholder="Password must contain Letter, number and Symbol" autocomplete="new-password" type="password">
                                </div>
                                <div class="single-form">
                                    <label>Confirm Password</label>
                                    <input type="password">
                                </div>
                                <div class="single-form">
                                    <div class="checkbox">
                                        <input type="checkbox" id="remember">
                                        <label for="remember"><span></span>I verify that the information passed are correct.</label>
                                    </div>
                                </div>
                                <div class="single-form">
                                    <button class="main-btn btn-block">Register</button>
                                </div>
                                
                                <div class="single-form">
                                    <label>Already have an account?</label>
                                    <a href="/login" class="main-btn main-btn-2 btn-block">Log in instead!</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>  
        </div>
    </section>

    <!--====== Login Ends ======-->

    <!--====== Footer Starts ======-->
    
    <%- include('partials/footer') %>

    <!--====== Footer Ends ======-->
    
</body>

</html>

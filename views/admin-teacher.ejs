<!doctype html>
<html class="no-js" lang="en">

    <!--====== Head Start ======-->

  <%- include('partials/header') %>

  <!--====== Head Ends ======-->

  <body>
    <!--====== Navigation Start ======-->

    <%- include('partials/admin-nav') %>

    <!--====== Navigation Ends ======-->
    
    <!--====== Page Banner Start ======-->

